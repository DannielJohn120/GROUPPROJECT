<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/rounded_edittext"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/summaryTextViewQty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:id="@+id/summaryTextViewDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Description"
        android:gravity="center_vertical"
        android:padding="4dp" />

    <TextView
        android:id="@+id/summaryTextViewDateOfTransfer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="YYYY-MM-DD"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:id="@+id/summaryTextViewFrom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="From Loc"
        android:gravity="center_vertical"
        android:padding="4dp" />

    <TextView
        android:id="@+id/summaryTextViewTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="To Loc"
        android:gravity="center_vertical"
        android:padding="4dp" />

    <ImageButton
        android:id="@+id/removeItemButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Remove item"
        android:layout_marginStart="8dp"/>
</LinearLayout>